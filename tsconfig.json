{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "alwaysStrict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/**"
  ]
}
